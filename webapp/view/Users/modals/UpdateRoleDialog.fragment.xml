<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="UpdateRoleDialog"
            title="Editar rol"
            draggable="true"
            resizable="true"
            contentWidth="400px"
            contentHeight="auto"
            stretchOnPhone="true">

        <VBox class="sapUiSmallMargin">

            <Label text="ID del Rol" labelFor="inputRoleID2"/>
            <Input id="inputRoleID2" editable="false"/>

            <Label text="Nombre del Rol" labelFor="inputRoleName2"/>
            <Input id="inputRoleName2" required="true"/>

            <Label text="DescripciÃ³n" labelFor="inputRoleDescription2"/>
            <TextArea id="inputRoleDescription2" rows="4"/>
        </VBox>

        <beginButton>
            <Button text="Actualizar" type="Emphasized" press="onUpdateRoleSubmit"/>
        </beginButton>
        <endButton>
            <Button text="Cancelar" type="Reject" press="onCloseUpdateRoleDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
